<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="200.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.controllers.RegisterController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="35.0" prefHeight="35.0" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <Label text="Login">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="loginField" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="25.0" right="10.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="35.0" prefHeight="35.0" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
               <children>
                  <Label text="Password">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin></Label>
                  <PasswordField fx:id="passwordField"  HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" right="10.0" />
                     </HBox.margin></PasswordField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="60.0" maxHeight="-Infinity" minHeight="35.0" prefHeight="35.0" VBox.vgrow="NEVER">
               <children>
                  <Label text="Nick">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="nickField" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="30.0" right="10.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <Label fx:id="resultLabel">
               <padding>
                  <Insets bottom="10.0" top="5.0" />
               </padding>
            </Label>
            <Button fx:id="registerButton" maxWidth="-Infinity" minWidth="100.0" mnemonicParsing="false" onAction="#register" prefWidth="100.0" text="Register" />
         </children>
      </VBox>
   </children>
</AnchorPane>
